{
  "name": "typescript-starter",
  "version": "1.0.0",
  "description": "",
  "main": "server.js",
  "scripts": {
    "start:dev": "nodemon --watch src --watch ts-node ./src/server.ts",
    "start:beta": "node dist/server.js",
    "start:production": "node dist/server.js",
    "build": "tsc",
    "test": "jest  --runInBand --detectOpenHandles --forceExit",
    "prepare-husky": "husky install && npx husky add .husky/pre-commit 'npm run lint && npm run test:unit && npm run test:component-local'",
    "lint": "eslint . --ext .ts",
    "sonar-scan": "npm run test:unit && node sonarqube-scanner.js",
    "start:test:unit": "npm run test:unit",
    "start:test:component": "npm run test:component",
    "start:test:integration": "npm run test:integration",
    "test:unit": "jest unit --detectOpenHandles --forceExit",
    "test:component": "jest component --detectOpenHandles --forceExit",
    "test:component-local": "docker-compose up --abort-on-container-exit --build",
    "test:integration": "jest integration --detectOpenHandles --passWithNoTests --forceExit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/body-parser": "^1.19.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/node": "^22.10.2",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "eslint": "^9.17.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "nodemon": "^3.1.9",
    "prettier": "^3.4.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "@types/express-validator": "^3.0.2",
    "body-parser": "^1.20.3",
    "cors": "^2.8.5",
    "express": "^4.21.2",
    "express-validator": "^7.2.0",
    "husky": "^9.1.7",
    "jest-sonar-reporter": "^2.0.0",
    "mongoose": "^7.0.0",
    "mongoose-sequence": "^6.0.1",
    "sonarqube-scanner": "^4.2.6",
    "supertest": "^7.0.0"
  }
}
